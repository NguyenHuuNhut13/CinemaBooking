@model CinemaBooking.Areas.Admin.ViewModels.ShowtimeViewModel

@{
    ViewData["Title"] = "Edit Showtime";
}

<form asp-area="Admin" asp-controller="Showtime" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ShowtimeId" />
    <div class="form-group">
        <label asp-for="MovieId" class="control-label">Movie</label>
        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuditoriumId" class="control-label">Auditorium</label>
        <select asp-for="AuditoriumId" class="form-control" asp-items="ViewBag.Auditoriums"></select>
        <span asp-validation-for="AuditoriumId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShowDate" class="control-label">Show Date</label>
        <input asp-for="ShowDate" class="form-control" type="date" />
        <span asp-validation-for="ShowDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShowTime" class="control-label">Show Time</label>
        <input asp-for="ShowTime" class="form-control" type="time" />
        <span asp-validation-for="ShowTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-area="Admin" asp-controller="Showtime" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

