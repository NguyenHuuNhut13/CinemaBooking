<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaBooking.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <!-- Brand aligned to the left -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-film"></i> CinemaBooking
                </a>
                <!-- Search Box -->
                <form class="d-flex mx-auto" action="@Url.Action("Search", "Home")" method="get">
                    <input class="form-control" type="search" name="query" placeholder="Tìm kiếm phim..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <!-- Right-aligned menu -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Show Account Dropdown only when the user is authenticated -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> Tài Khoản
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="TicketHistory">
                                            <i class="fas fa-history"></i> Lịch Sử Vé
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ChangePassword">
                                            <i class="fas fa-key"></i> Đổi Mật Khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt"></i> Đăng Xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        else
                        {
                            <!-- Show Login and Register options when the user is not authenticated -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng Nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng Ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
