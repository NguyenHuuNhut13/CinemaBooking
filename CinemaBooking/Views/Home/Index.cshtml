@model IEnumerable<CinemaBooking.Models.Movie>

@{
    ViewData["Title"] = "Danh Sách Phim";
}

<!-- Banner Carousel -->
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Example of 3 items for the banner -->
        <div class="carousel-item active">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/10/BANNERP11-01.jpg" class="d-block w-100" alt="Banner 1" />
        </div>
        <div class="carousel-item">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/11/referenceSchemeHeadOfficeallowPlaceHoldertrueheight1069ldapp-19.jpg" class="d-block w-100" alt="Banner 2" />
        </div>
        <div class="carousel-item">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/11/referenceSchemeHeadOfficeallowPlaceHoldertrueheight1069ldapp-15.jpg" class="d-block w-100" alt="Banner 3" />
        </div>
    </div>
    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Movie List -->
<div class="mt-4">
    <h1 class="text-center mb-4">Danh Sách Phim</h1>
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "Home", new { id = movie.MovieId })" class="text-decoration-none">
                    <div class="card h-100 movie-card">
                        <!-- Movie Poster Image -->
                        <img src="@Url.Content("~/uploads/" + movie.Poster)" class="card-img-top movie-img" alt="Poster của @movie.Title" />
                        <div class="card-body text-center">
                            <!-- Movie Title -->
                            <h5 class="card-title">@movie.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<!-- Banner Carousel -->
<div id="carouselBottom" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Example of 3 items for the banner -->
        <div class="carousel-item active">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/10/BANNERP11-01.jpg" class="d-block w-100" alt="Banner 1" />
        </div>
        <div class="carousel-item">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/11/referenceSchemeHeadOfficeallowPlaceHoldertrueheight1069ldapp-19.jpg" class="d-block w-100" alt="Banner 2" />
        </div>
        <div class="carousel-item">
            <img src="https://bhdstar.vn/wp-content/uploads/2024/11/referenceSchemeHeadOfficeallowPlaceHoldertrueheight1069ldapp-15.jpg" class="d-block w-100" alt="Banner 3" />
        </div>
    </div>
    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselBottom" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselBottom" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
